  <style>
    .toast {
      position: fixed;
      top: 70px;
      right: 20px;
      padding: 12px 20px;
      border-radius: 6px;
      pointer-events: none;
      color: white;
      font-weight: bold;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
      z-index: 9999;
      opacity: 0;
      animation: fadeIn 0.4s forwards, fadeOut 0.4s 3s forwards;
    }

    .toast-error {
      background-color: #e74c3c;
      /* Màu đỏ cho thông báo lỗi */
    }

    .toast-success {
      background-color: #2ecc71;
      /* Màu xanh cho thông báo thành công */
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    @keyframes fadeOut {
      to {
        opacity: 0;
        transform: translateY(-20px);
        
      }
    }
  </style>
</head>

<body >

  <% if (error.length > 0) { %>
  <div id="toast" class="toast toast-error"><%= error[0] %></div>
  <% } %>

  <% if (success.length > 0) { %>
  <div id="toast" class="toast toast-success"><%= success[0] %></div>
  <% } %>
