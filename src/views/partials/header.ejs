<link rel="stylesheet" href="/css/header.css">
<header>
  <section>
    <!-- MAIN CONTAINER -->
    <div id="container">
      <!-- SHOP NAME -->
      <div id="shopName"><a href="/"> <b>HUGN</b> </a></div>
      <!-- COLLCETIONS ON WEBSITE -->
      <div id="collection">
        <div id="clothing"><a href="/products">Sản phẩm</a></div>
        <% if(user && user.role === "admin") {%>
        <div><a href="/admin">Trang quản trị</a></div>
        <%}%>
      </div>
      <!-- SEARCH SECTION -->
      <div id="search">
        <i class="fas fa-search search"></i>
        <input type="text" id="input" name="searchBox" placeholder="Nhập để tìm kiếm">
      </div>
      <!-- USER SECTION (CART AND USER ICON) -->
      <div id="user">
        <a id="card" href="/cart">
          <div class="cart__icon"><i class="fas fa-shopping-cart addedToCart"></i></div>
          <div id="badge"> 0 </div>
        </a>
        <div class="user__info">
          <% if(user) {%>
        <span><%= user.name%></span>
        <img src="<%= user.avatar%>" class="userIcon"></img>
        <div class="menu">
          <div>
            <div class="item"><a href="#">Thông tin tài khoản</a></div>
            <div class="item"><a href="/logout">Đăng xuất</a></div>
          </div>
        </div>
        <%}else{%>
        <button><a href="/account">Đăng ký</a></button>
        <button><a href="/account">Đăng nhập</a></button>
        <%}%>
                    
                    
                </div>
            </div>
        </div>

    </section>
</header>